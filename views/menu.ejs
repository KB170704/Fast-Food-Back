<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Menu Items</title>
    <style>
        body {
            font-family: "Segoe UI", Arial, sans-serif;
            margin: 20px;
            background: #f5f5f5;
            color: #333;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 2rem;
            color: #1f2937;
        }

        /* Home & Add Buttons */
        .home-btn {
            display: inline-block;
            margin-bottom: 20px;
            background-color: #10b981;
            color: #fff;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 8px;
            font-weight: bold;
            font-size: 0.95rem;
            transition: background 0.3s, transform 0.2s;
        }
        .home-btn:hover {
            background-color: #059669;
            transform: translateY(-2px);
        }

        /* Menu Container */
        .menu-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        /* Menu Card */
        .menu-item {
            background: #fff;
            border-radius: 12px;
            overflow: hidden;
            width: 320px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.12);
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            flex-direction: column;
        }
        .menu-item:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.18);
        }

        /* Menu Image */
        .menu-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        /* Details Area */
        .menu-item .details {
            padding: 15px;
            flex: 1;
        }

        .menu-item h2 {
            margin: 0 0 8px;
            font-size: 1.25rem;
            color: #1d4ed8;
        }

        .menu-item p {
            margin: 5px 0;
            font-size: 0.88rem;
            color: #444;
        }

        /* Highlight Price */
        .menu-item .price {
            font-size: 1rem;
            font-weight: bold;
            color: #16a34a;
        }
        .menu-item .discount {
            color: #d97706;
            font-weight: 600;
        }

        /* Category Badge */
        .badge {
            display: inline-block;
            background: #e0f2fe;
            color: #0369a1;
            font-size: 0.75rem;
            padding: 3px 8px;
            border-radius: 50px;
            margin-top: 5px;
        }

        /* Photo Gallery */
        .menu-item .photo-gallery {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
            margin-top: 10px;
        }
        .menu-item .photo-gallery img {
            width: 55px;
            height: 55px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid #ddd;
            transition: transform 0.25s ease;
        }
        .menu-item .photo-gallery img:hover {
            transform: scale(1.1);
            border-color: #2563eb;
        }

        /* Actions */
        .menu-item .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 12px;
        }
        .menu-item .actions a {
            text-decoration: none;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 600;
            color: #fff;
            transition: background 0.3s, transform 0.2s;
        }
        .menu-item .actions .edit {
            background-color: #3b82f6;
        }
        .menu-item .actions .delete {
            background-color: #ef4444;
        }
        .menu-item .actions .edit:hover {
            background-color: #2563eb;
            transform: scale(1.05);
        }
        .menu-item .actions .delete:hover {
            background-color: #dc2626;
            transform: scale(1.05);
        }
        .extra-details {
            margin-top: 10px;
            background: #f9fafb;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px;
        }
        .extra-details h4 {
            margin: 0 0 8px;
            font-size: 0.9rem;
            color: #111827;
        }
        .extra-details ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .extra-details li {
            font-size: 0.85rem;
            padding: 3px 0;
            border-bottom: 1px dashed #ddd;
        }
        .extra-details li:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>

<!-- Home Button -->
<a href="/home" class="home-btn">üè† Home</a>
<a href="/menu/create" class="home-btn">‚ûï Add Menu</a>
<h1>üçΩÔ∏è Menu Items</h1>

<div class="menu-list">
    <% if (menuItems && menuItems.length > 0) { %>
        <% menuItems.forEach(function(item) { %>
            <div class="menu-item">
                <!-- Primary Photo -->
                <% if (item.primaryPhoto) { %>
                    <img src="<%= item.primaryPhoto %>" alt="<%= item.Name %>">
                <% } %>

                <!-- Details -->
                <div class="details">
                    <h2><%= item.Name %></h2>
                    <p class="price">Price: ‚Çπ<%= item.price %> ‚Üí ‚Çπ<%= item.finalPrice %></p>
                    <p class="discount">Discount: <%= item.discount %>%</p>
                    <span class="badge"><%= item.category %></span>
                    <p><strong>Type:</strong> <%= item.type %></p>
                    <p><strong>Unit:</strong> <%= item.unitNumber %> <%= item.unit %></p>
                    <p><strong>Delivery:</strong> ‚è± <%= item.deliveryTime %> mins</p>
                    <p><strong>FSSAI:</strong> <%= item.fssaiLicense %></p>
                    <p><strong>Shelf Life:</strong> <%= item.shelfLife %></p>
                    <p><strong>Return Policy:</strong> <%= item.returnPolicy %></p>
                    <p><strong>Storage Tips:</strong> <%= item.storageTips %></p>
                    <p><strong>Key Features:</strong> <%= item.keyFeatures %></p>
                    <p><strong>Manufacturer:</strong> <%= item.manufacturerName %>, <%= item.manufacturerAddress %></p>
                    <p><strong>Customer Care:</strong> <%= item.customerCareDetails %></p>




                    <% if (item.details && Object.keys(item.details).length > 0) { %>
                        <div class="extra-details">
                            <h4>Additional Details</h4>
                            <ul>
                                <% Object.entries(item.details).forEach(([key, value]) => { %>
                                    <li><strong><%= key %>:</strong> <%= value %></li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>






                    <!-- Photo Gallery -->
                    <% if (item.photos && item.photos.length > 0) { %>
                        <div class="photo-gallery">
                            <% item.photos.forEach(function(photo) { %>
                                <img src="<%= photo %>" alt="Photo">
                            <% }) %>
                        </div>
                    <% } %>

                    <!-- Actions -->
                    <div class="actions">
                        <a href="/menu/edit/<%= item._id %>" class="edit">‚úèÔ∏è Edit</a>
                        <a href="/menu/delete/<%= item._id %>" class="delete" onclick="return confirm('Are you sure to delete this item?');">üóëÔ∏è Delete</a>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>No menu items found.</p>
    <% } %>
</div>

</body>
</html>
