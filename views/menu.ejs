<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Menu Items</title>
    <style>
        /* ===== Global Styles ===== */
        body {
            font-family: "Segoe UI", Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: #f5f5f5;
            color: #333;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 20px;
            color: #444;
        }

        a {
            text-decoration: none;
            color: #022640;
        }
        a:hover {
            text-decoration: underline;
        }

        /* ===== Add Menu Item Link ===== */
        body > a {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 15px;
            background: #0077cc;
            color: #fff;
            border-radius: 6px;
            font-weight: bold;
            transition: background 0.3s ease;
        }
        body > a:hover {
            background: #005fa3;
            text-underline: none;
        }

        /* ===== Menu List Layout ===== */
        .menu-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* ===== Menu Item Card ===== */
        .menu-item {
            background: #fff;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            /*height: 500px;              !* Fixed height *!*/
            display: flex;
            flex-direction: column;
            overflow: hidden;           /* Prevent overflow */
        }
        .menu-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

        .menu-item img {
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .menu-item h3 {
            margin: 10px 0 8px;
            font-size: 12px;
            color: #222;
        }

        .menu-item p {
            margin: 5px 0;
            font-size: 12px;
            color: #555;
        }

        .menu-item strong {
            color: #222;
            font-size: 15px;
        }

        /* ===== Custom Details Section ===== */
        .menu-item ul {
            margin: 8px 0;
            padding-left: 18px;
        }
        .menu-item li {
            font-size: 0.9rem;
            margin: 3px 0;
            color: #444;
        }

        /* ===== Edit/Delete Links ===== */
        .menu-item a {
            display: flex;
            margin: 20px 20px 0;
            font-size: 18px;
            font-weight: bold;
        }
        .menu-item a[href*="edit"] {
            color: #28a745;
        }
        .menu-item a[href*="edit"]:hover {
            color: #1e7e34;
        }
        .menu-item a[href*="delete"] {
            color: #dc3545;
        }
        .menu-item a[href*="delete"]:hover {
            color: #a71d2a;
        }

        /* ===== Empty Message ===== */
        .menu-list p {
            text-align: center;
            grid-column: 1/-1;
            font-size: 15px;
            color: #666;
        }
        .primary-photo {
            width: 90px;
            height: 90px;
            object-fit: contain;
            border-radius: 8px;
        }
        .photos-slider {
            margin-top: 8px;
            display: flex;
            overflow-x: auto;
            gap: 10px;
        }
        .photos-slider img {
            height: 80px;
            border-radius: 6px;
            flex-shrink: 0;
            cursor: pointer;
            transition: transform 0.2s ease;
        }
        .photos-slider img:hover {
            transform: scale(1.1);
        }

        /* ===== Responsive ===== */
        @media (max-width: 600px) {
            body {
                padding: 15px;
            }
            .menu-item {
                padding: 12px;
            }
            .menu-item h3 {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>

<a href="/home">Home</a>
<a href="/menu/create">+ Menu</a>

<h1>Menu Items</h1>

<div class="menu-list">
    <% if (menuItems && menuItems.length > 0) { %>
        <% menuItems.forEach(function(item) { %>
            <div class="menu-item">
                <div>
                <!-- Primary photo large -->
                <% if(item.primaryPhoto) { %>
                    <img src="<%= item.primaryPhoto %>" alt="<%= item.Name %>" class="primary-photo" />
                <% } %>

                <!-- Other photos slider -->
                <% if(item.photos && item.photos.length > 0) { %>
                    <div class="photos-slider">
                        <% item.photos.forEach(photo => { %>
                            <img src="<%= photo %>" alt="Additional photo" class="other-photo" />
                        <% }) %>
                    </div>
                <% } %>
                </div>

                <h3><%= item.Name %></h3>
                <p>Price: ₹<%= item.price %> → <strong>₹<%= item.finalPrice.toFixed()%></strong></p>
                <p>Category: <%= item.category %></p>
                <p>Type: <%= item.type %></p>
                <p><strong>Manufacturer:</strong> <%= item.manufacturerName %>, <%= item.manufacturerAddress %></p>
                <p><strong>FSSAI License:</strong> <%= item.fssaiLicense %></p>
                <p><strong>Shelf Life:</strong> <%= item.shelfLife %></p>
                <p><strong>Return Policy:</strong> <%= item.returnPolicy %></p>
                <p><strong>Storage Tips:</strong> <%= item.storageTips %></p>
                <p><strong>Delivery Time:</strong> <%= item.deliveryTime %> mins</p>

                <% if(item.customDetails && Object.keys(item.customDetails).length > 0) { %>
                    <div>
                        <strong>Custom Details:</strong>
                        <ul>
                            <% Object.entries(item.customDetails).forEach(([key, value]) => { %>
                                <li><%= key %>: <%= value %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                <div style="display: flex; align-items: center; justify-content: center;">
                    <a href="/menu/edit/<%= item._id %>">Edit</a>
                    <a href="/menu/delete/<%= item._id %>" onclick="return confirm('Are you sure?')">Delete</a>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No menu items found.</p>
    <% } %>
</div>
</body>
</html>
