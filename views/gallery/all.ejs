<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>All Gallery Items</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <style>
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      /* Card Styling */
      .gallery-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border-radius: 1rem;
      }

      .gallery-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
      }

      .gallery-image {
        transition: transform 0.4s ease;
      }

      .gallery-card:hover .gallery-image {
        transform: scale(1.05);
      }

      /* Button Styling */
      .btn {
        transition: all 0.3s ease;
        font-weight: 600;
        border-radius: 0.5rem;
        padding: 0.5rem 1.25rem;
      }

      .btn-add {
        background-color: #16a34a;
        color: white;
      }

      .btn-add:hover {
        background-color: #15803d;
        box-shadow: 0 4px 10px rgba(22, 163, 74, 0.5);
      }

      .btn-home {
        background-color: #2563eb;
        color: white;
      }

      .btn-home:hover {
        background-color: #1d4ed8;
        box-shadow: 0 4px 10px rgba(37, 99, 235, 0.5);
      }

      .btn-yellow {
        background-color: #facc15;
        color: #000;
      }

      .btn-yellow:hover {
        background-color: #eab308;
        box-shadow: 0 2px 8px rgba(234, 179, 8, 0.5);
      }

      .btn-red {
        background-color: #ef4444;
        color: #fff;
      }

      .btn-red:hover {
        background-color: #dc2626;
        box-shadow: 0 2px 8px rgba(239, 68, 68, 0.4);
      }
    </style>
  </head>
  <body class="bg-gray-100 min-h-screen p-10">
    <div class="container mx-auto">
      <!-- Top Bar -->
      <div class="flex flex-wrap justify-between items-center mb-10 gap-4">
        <h1 class="text-4xl font-bold text-blue-800">üì∑ Gallery Items</h1>
        <div class="flex gap-4">
          <a href="/gallery/add" class="btn btn-add">+ Add New</a>
          <a href="/home" class="btn btn-home">üè† Home</a>
        </div>
      </div>

      <!-- Gallery Items -->
      <% if (menuItems.length === 0) { %>
      <p class="text-center text-gray-500 text-xl">No gallery items found.</p>
      <% } else { %>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
      >
        <% menuItems.forEach(item => { %>
        <div class="bg-white overflow-hidden gallery-card">
          <img
            src="/<%= item.image %>"
            alt="<%= item.name %>"
            class="w-full h-56 object-cover gallery-image"
          />
          <div class="p-5">
            <h3 class="text-xl font-semibold text-blue-700 mb-2">
              <%= item.name %>
            </h3>
            <p class="text-gray-600 mb-4"><%= item.description %></p>
            <div class="flex justify-between">
              <a
                href="/gallery/edit/<%= item._id %>"
                class="btn btn-yellow text-sm"
                >‚úèÔ∏è Edit</a
              >
              <form
                action="/gallery/<%= item._id %>?_method=DELETE"
                method="POST"
              >
                <button
                  type="submit"
                  class="btn btn-red text-sm"
                >
                  üóëÔ∏è Delete
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
  </body>
</html>
